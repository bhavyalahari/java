import java.util.Scanner;		
class Pattern2
{
	public static void main (String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("enter n value");
		int n=sc.nextInt();
		System.out.println(n);
		int i,j;
		for(i=1;i<=n;i++)
		{
			for(j=i-1;j<n;j++)
			{
				System.out.print("*");
				
				}
				System.out.println();
				}
				}
