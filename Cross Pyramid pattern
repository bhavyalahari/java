import java.util.Scanner;		
class Pattern
{
	public static void main (String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("enter n value");
		int n=sc.nextInt();
		int i,j;
		for(i=1;i<=n;i++)
		{
			for(j=1;j<=i;j++)
			{
				System.out.print("*");
				
				}
				System.out.println();
				}
for(i=1;i<=n-1;i++)
{
	for(j=i-1;j<n-1;j++)
	{
		System.out.print("*");				
				}
				System.out.println();
				}
	}
	}
